
@model IEnumerable<DORIS.Models.tp_getSummary_Result>


@{
    ViewBag.Title = "Order Summary";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}
<br/>
<div class="panel panel-success">
    <div class="panel-heading"><h3 align="center">Order Summary</h3></div>

</div>


<table class="table table-condensed table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Order_Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Records)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Order_Status)
            </td>
            <td>
                @if (item.Records > 0)
                {
                    @Html.ActionLink(String.Format("{0}", item.Records), "Display", new { OS = item.OrderStatusCode })
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.Records)
                }
            </td>
        </tr>
    }




</table>


